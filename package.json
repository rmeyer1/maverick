{
  "name": "maverick",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:web dev:worker",
    "dev:web": "npm --workspace @maverick/web run dev",
    "dev:worker": "npm --workspace @maverick/worker run dev",
    "build": "npm-run-all build:web build:worker",
    "build:web": "npm --workspace @maverick/web run build",
    "build:worker": "npm --workspace @maverick/worker run build",
    "lint": "npm --workspace @maverick/web run lint",
    "typecheck": "npm-run-all -p typecheck:web typecheck:worker",
    "typecheck:web": "npm --workspace @maverick/web run typecheck",
    "typecheck:worker": "npm --workspace @maverick/worker run typecheck",
    "test": "npm --workspace @maverick/shared run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
